import os
import json
import subprocess
from datetime import datetime
import glob

# --- CONFIGURATION ---
GITHUB_USERNAME = "duyhxm"
REPO_NAME = "kaggle-api-test"
DATASET_DIR = "/kaggle/input/container-id-secrets" # Kaggle often converts hyphens to underscores, check if path fails
SOURCE_BRANCH = "main"

def run_cmd(cmd):
    """Run shell command using subprocess"""
    print(f"[EXEC] {cmd}")
    try:
        # Using subprocess as requested
        result = subprocess.check_output(cmd, shell=True, stderr=subprocess.STDOUT)
        print(result.decode("utf-8"))
        return True
    except subprocess.CalledProcessError as e:
        print(f"[ERROR] {e.output.decode('utf-8')}")
        return False

def get_github_token():
    """Find JSON file in dataset and retrieve GITHUB_TOKEN"""
    print(f"[INFO] Searching for secrets in {DATASET_DIR}...")
    
    # Find any .json file in the dataset directory
    json_files = glob.glob(os.path.join(DATASET_DIR, "*.json"))
    
    if not json_files:
        # Fallback: Try searching with underscore if hyphen path fails
        alt_dir = DATASET_DIR.replace("-", "_")
        json_files = glob.glob(os.path.join(alt_dir, "*.json"))
        
    if not json_files:
        print("[FAIL] No JSON file found in dataset!")
        return None

    secret_file = json_files[0]
    print(f"[INFO] Found secret file: {secret_file}")
    
    try:
        with open(secret_file, "r") as f:
            data = json.load(f)
            return data.get("GITHUB_TOKEN")
    except Exception as e:
        print(f"[FAIL] Error reading JSON: {e}")
        return None

def main():
    # 1. Get Token
    token = get_github_token()
    if not token:
        return

    # 2. Setup Git Config
    run_cmd("git config --global user.email 'bot@kaggle.com'")
    run_cmd("git config --global user.name 'Kaggle Test Bot'")
    
    # 3. Init & Remote
    if not os.path.exists(".git"):
        run_cmd("git init")
    
    remote_url = f"https://{GITHUB_USERNAME}:{token}@github.com/{GITHUB_USERNAME}/{REPO_NAME}.git"
    run_cmd("git remote remove origin")
    run_cmd(f"git remote add origin {remote_url}")

    # 4. Sync with Remote (Fetch & Reset)
    # This ensures we have the latest code and history
    run_cmd(f"git fetch origin {SOURCE_BRANCH}")
    run_cmd(f"git reset --mixed origin/{SOURCE_BRANCH}")
    run_cmd("git checkout .") # Restore files to avoid "deleted files" issue

    # 5. Create a NEW File
    timestamp = datetime.now().strftime("%Y-%m-%d %H:%M:%S")
    new_filename = "auto_created_test.txt"
    with open(new_filename, "w") as f:
        f.write(f"File created automatically by Kaggle Script.\n")
        f.write(f"Time: {timestamp}\n")
    print(f"[INFO] Created new file: {new_filename}")

    # 6. Create New Branch & Push
    branch_id = datetime.now().strftime("%Y%m%d-%H%M%S")
    new_branch = f"feature-test-{branch_id}"
    
    run_cmd(f"git checkout -b {new_branch}")
    run_cmd("git add .")
    run_cmd(f"git commit -m 'Add new test file via script at {timestamp}'")
    
    print(f"[PUSH] Pushing to branch {new_branch}...")
    success = run_cmd(f"git push origin {new_branch}")

    if success:
        print(f"\n[DONE] Successfully pushed branch '{new_branch}' to GitHub!")
    else:
        print("\n[FAIL] Push failed.")

if __name__ == "__main__":
    main()
